<style>
    @keyframes gradient {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }
    .animate-gradient {
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
    }

    .fun-underline {
        position: relative;
        text-decoration: none;
    }
    
    .fun-underline::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: -2px;
        width: 100%;
        height: 3px;
        background: linear-gradient(90deg, #6366f1, #a855f7, #ec4899);
        background-size: 200% 100%;
        animation: gradient 1.5s ease infinite;
        border-radius: 2px;
    }
</style>

<!-- Title -->
<div class="relative mb-8">
    <h1 class="text-3xl font-bold text-indigo-900 text-center">
        Metrobienquoi âœ¨
    </h1>
    <div class="absolute -z-10 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-yellow-200 rounded-full blur-3xl opacity-30 animate-pulse"></div>
</div>

<!-- Form Container -->
<div class="bg-white rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300">
    <div class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 p-6">
        <div class="text-white">
            <div class="text-2xl font-bold flex items-center gap-2">
                <i class="fas fa-train"></i>
                Find Your Perfect Station
            </div>
            <p class="text-indigo-100 mt-2">Select the stations you <span class="fun-underline">frequently visit</span> to find the station you should be <span class="fun-underline">leaving near</span></p>
        </div>
    </div>
    <div class="p-6 bg-white bg-opacity-90 backdrop-blur-sm">
        <%= render 'form', search: @search %>
    </div>
</div>
