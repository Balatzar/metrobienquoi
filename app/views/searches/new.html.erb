<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to '← Back to Searches', searches_path, class: "text-blue-500 hover:text-blue-700" %>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-6">New Search</h1>

    <%= form_with(model: @search, local: true, class: "space-y-6") do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Select Stations</label>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <%= f.collection_check_boxes :station_ids, Station.all, :id, :name do |b| %>
            <div class="flex items-center">
              <%= b.check_box(class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded") %>
              <%= b.label(class: "ml-2 block text-sm text-gray-900") %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="flex justify-end">
        <%= f.submit "Create Search", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>
