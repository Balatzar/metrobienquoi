<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold">Searches</h1>
      <p class="text-gray-500 text-sm mt-1">
        Completed Itineraries (from IDF mobi API): <%= Itinerary.complete.count %>/<%= Itinerary.count %>
      </p>
    </div>
    <%= link_to 'New Search', new_search_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white shadow-md rounded-lg">
    <% @searches.each do |search| %>
      <div class="border-b border-gray-200 p-4">
        <div class="flex justify-between items-center">
          <div>
            <h2 class="text-lg font-semibold">Search #<%= search.id %></h2>
            <p class="text-gray-600"><%= search.stations.count %> stations</p>
          </div>
          <%= link_to 'View Details', search_path(search), class: "text-blue-500 hover:text-blue-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
